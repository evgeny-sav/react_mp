{
  "extends": "stylelint-config-recommended",
  "rules": {
    "string-quotes": ["single"],
    "selector-pseudo-class-no-unknown": [true, {
      "ignorePseudoClasses": ["global"]
    }],
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "extends"
      ]
    }],
    "block-no-empty": null,
    "unit-whitelist": ["px", "%","em", "rem", "s"]
  }
}
